<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".IngresoPedidosActivity">

    <TextView
        android:text="Ingreso de Pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />
    <EditText
        android:paddingTop="5dp"
        android:hint="Ingrese Nombre Completo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:paddingTop="5dp"
        android:hint="Ingrese Seccion de Mantenimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:paddingTop="5dp"
        android:hint="Ingrese Lugar de Mantenimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:paddingTop="5dp"
        android:hint="Ingrese Fecha de Pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:text="ACEPTAR"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="CANCELAR"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />



    </LinearLayout>


</LinearLayout>